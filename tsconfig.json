{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "charset": "utf8",
    "locale": "ru",
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "isolatedModules": true,
    "newLine": "LF",
    "lib": ["dom", "dom.iterable", "scripthost", "webworker", "esnext"],
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],
      "store/*": ["src/store/*"],
      "themes/*": ["themes/*"],
      "styles/*": ["src/styles/*"]      
    }
  },
  "plugins": [
    {
      "name": "typescript-styled-plugin",
      "tags": [
        "styled",
        "css",
        "injectGlobal",
        "createGlobalStyle",
        "keyframes"
      ]
    }
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "docs", "react", "public", "**/*.spec.ts", "dist"]
}
